<div class="container">
  <div class="jobs-list row">
    <div class="col-md-6 col-md-offset-3">


      <div class="pagination_centered">
        <%= will_paginate @jobs %>
      </div>


      <% @jobs.each do |job| %>

        <div class="jobs-individual">

          <% if logged_in? %>
            <% if current_admin?  %>
              <h3> <%= link_to "#{job.title}",job_path(job) %> </h4>
              <p> <%= job.description %> </p>
              <div class="btn center-block">
                <%= link_to "Edit", edit_admin_job_path(job), class: 'btn btn-md btn-primary' %>
              </div>

            <% else %>
              <h3> <%= link_to "#{job.title}",job_path(job) %> </h4>
              <p> <%= job.description %> </p>
          <% end %>

            <% else %>
              <h3> <%= link_to "#{job.title}",job_path(job) %> </h4>
              <p> <%= job.description %> </p>
            <% end %>

            <% if current_business_admin? && current_user.employer_id == job.user_id %>
            <div class="btn center-block">
              <%= link_to "Edit", edit_business_job_path(current_user.employer_id, job.id), class: 'btn btn-md btn-primary' %>
            </div>
            <% end %>
        </div>

      <% end %>


    </div>
  </div>
</div>
