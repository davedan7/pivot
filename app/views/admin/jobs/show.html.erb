<div class="container">
  <div class="jobs-list row">
    <div class="col-md-6 col-md-offset-3">


      <div class="jobs-show">

        <h3><%= @job.title %></h3>


        <h4>JOB DESCRIPTION:</h4>
        <p> <%= @job.description %> </p>


        <h4>JOB CATEGORIES:</h4>

        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="text-center">
              <% @job.categories.each do |category| %>
                <p> <%=link_to "#{category.name}", category_path(category) %> </p>
              <% end %>

            <h4>Job Status:</h4>
            <%= @job.show_status %>

            <% if current_admin? || current_business_admin? || current_business? %>
              <p><%= link_to "Edit", edit_business_job_path(business: @job.user.slug), class: 'btn btn-md btn-primary' %></p>
            <% end %>
            </div>
          </div>
        </div>

      </div>


    </div>
  </div>
</div>
