<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-5 ">
      <div class="text-center">
        <h1><%= @category.name %></br></h1>
        <h3><%= @category.description %><br></h3>
        <div class="text-center">
          <%= button_to "Edit Category", edit_admin_category_path(@category.id), method: 'get', class: "btn btn-primary" %>
          <%= button_to "Delete Category", admin_category_path(@category.id), method: 'delete', class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
